alias migrate="rake db:migrate db:test:prepare"
alias remigrate="rake db:migrate && rake db:migrate:redo && rake db:schema:dump db:test:prepare"
alias remongrate="rake mongoid:migrate && rake mongoid:migrate:redo"
alias gi="gem install"
alias ln="ln -v"
alias mkdir="mkdir -p"
alias ...="../.."
alias drop-db="rake db:drop:all && rake db:create:all && rake db:migrate && rake db:test:prepare"

# Dribbble Feeds
alias feed="cat ~/Dropbox/Inspiration/Inbox/feed.txt"
alias feed-clear="rm ~/Dropbox/Inspiration/Inbox/feed.txt && touch ~/Dropbox/Inspiration/Inbox/feed.txt"
alias dribbble-clear="rm ~/Dropbox/Inspiration/Dribbble/*"

# Heroku Deploy
alias deploy-staging="git push staging master && heroku run rake db:migrate --remote staging"

# Git & Github
alias g="git"
alias github="hub"
alias grb="git create-branch"
alias gdb="git delete-branch"
alias gpr="hub pull-request"
alias gco="git checkout"
alias ghco="hub checkout"
alias ghb="hub browse"
alias gres="git reset --hard"
alias gitlog="git log --pretty=format:%s"

# Nearlyfreespeech
alias sshnfs="ssh kaishin_kaishinlab@ssh.phx.nearlyfreespeech.net"

# Use updated rsync
alias rsync="/usr/local/bin/rsync"

# Launch Tower
alias tower="gittower"

# Clean launch services
alias fixopenwith='/System/Library/Frameworks/CoreServices.framework/Frameworks/LaunchServices.framework/Support/lsregister -kill -r -domain local -domain system -domain user'

# Unfollow Twitter users who don't follow back
alias unfollow="t leaders | xargs t unfollow"
