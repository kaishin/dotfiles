alias remongrate="rake mongoid:migrate && rake mongoid:migrate:redo"
alias gi="gem install"
alias ln="ln -v"
alias mkdir="mkdir -p"
alias ...="../.."
alias dropdb="rake db:drop:all && rake db:create:all && rake db:migrate && rake db:test:prepare"

# Heroku Deploy
alias deploy-staging="git push staging master && heroku run rake db:migrate --remote staging"

alias zshrc="mvim ~/.zshrc"
