[user]
  name = Reda Lemeden
  email = git@redalemeden.com
[core]
  excludesfile = ~/.gitignore
  editor = vim -f
  quotepath = false
[diff]
  tool = Kaleidoscope
[difftool "Kaleidoscope"]
  cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[merge]
  tool = Kaleidoscope
[mergetool "Kaleidoscope"]
  cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
  trustExitCode = true
[mergetool]
  keepBackup = false
  prompt = false
[alias]
  branch-name = "!git rev-parse --abbrev-ref HEAD"
  aa = add --all
  c = commit -m
  ca = commit --amend
  co = checkout
  cp = cherry-pick
  checkout-submodules = submodule foreach --recursive git checkout .
  reset-submodules = submodule foreach git reset --hard
  db = branch -D
  dt = "!git tag -d $1 && git push --delete origin $1"
  df = diff
  log10 = log -n 10
  log5 = log -n 5
  mt = mergetool
  merge-onto = "!git fetch . $(git branch-name):$1"
  mo = merge-onto
  nix = reset --hard
  pf = push --force-with-lease
  ra = rebase --abort
  rc = rebase --continue
  rim = rebase -i master
  rdb = push origin --delete
  st = status -s
  squash = merge --squash
  update = "!git fetch | git pull origin $1"
  wipe = clean -f -d
[push]
  default = current
[format]
  pretty = %Cblue%h%Creset %Cgreen[%ar]%Creset (%an) %s
[github]
  user = kaishin
[color]
  ui = auto
[case]
  ignorecase = false
[web]
  browser = open
[pull]
  rebase = true
[credential]
  helper = osxkeychain
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  required = true
  process = git-lfs filter-process
[rerere]
  enabled = true
[gpg]
  program = /usr/local/bin/gpg
[init]
  defaultBranch = main
[commit]
  gpgsign = false
[difftool]
  prompt = false