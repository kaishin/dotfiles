[user]
  name = Reda Lemeden
  email = git@kaishin.haz.email
  signingkey = F1B02C90
[core]
  excludesfile = ~/.gitignore
  editor = vim -f
  quotepath = false
[diff]
  tool = Kaleidoscope
[difftool "Kaleidoscope"]
  cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[merge]
  tool = Kaleidoscope
[mergetool "Kaleidoscope"]
  cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
  trustExitCode = true
[mergetool]
  keepBackup = false
  prompt = false
[alias]
  branch-name = "!git rev-parse --abbrev-ref HEAD"
  aa = add --all
  c = commit -m
  cs = commit -S -m
  ca = commit --amend
  cas = commit --amend -S
  co = checkout
  cp = cherry-pick
  cv = commit -v
  clean-submodules = submodule foreach --recursive git checkout .
  db = branch -D
  df = diff
  dmb = "!git co master && git branch --merged | grep -v '\\*' | xargs -n 1 git branch -d"
  f = fetch
  log10 = log -n 10
  log5 = log -n 5
  mt = mergetool
  merge-onto = "!git fetch . $(git branch-name):$1"
  mo = merge-onto
  nix = reset --hard
  nuke = submodule foreach git reset --hard
  pf = push --force-with-lease
  pop = stash pop
  pl = pull
  pr = pull-request
  ra = rebase --abort
  rc = rebase --continue
  rim = rebase -i master
  rdb = push origin --delete
  st = status -s
  squash = merge --squash
  update-master = "!git fetch | git pull origin master"
  wipe = clean -f -d
[push]
  default = current
[format]
  pretty = %Cblue%h%Creset %Cgreen[%ar]%Creset (%an) %s
[github]
  user = kaishin
[color]
  ui = auto
[case]
  ignorecase = false
[web]
  browser = open
[pull]
  rebase = true
[credential]
  helper = osxkeychain
[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true
[rerere]
  enabled = true
[gpg]
  program = gpg2
